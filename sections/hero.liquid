<style>
  .hero {
    position: relative;
    overflow: hidden;
    background-color: var(--background);
    padding: 5rem 0;
  }
  
  @media (min-width: 1024px) {
    .hero {
      padding: 8rem 0;
    }
  }
  
  .hero__bg-gradient {
    position: absolute;
    inset: 0;
    background: radial-gradient(circle at 30% 20%, var(--brand-muted) 0%, transparent 50%);
    pointer-events: none;
  }
  
  .hero__container {
    position: relative;
    display: grid;
    gap: 3rem;
    align-items: center;
  }
  
  @media (min-width: 1024px) {
    .hero__container {
      grid-template-columns: 1fr 1fr;
      gap: 4rem;
    }
  }
  
  .hero__content {
    text-align: center;
  }
  
  @media (min-width: 1024px) {
    .hero__content {
      text-align: left;
    }
  }
  
  .hero__badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 1.5rem;
    padding: 0.375rem 1rem;
    font-size: 0.875rem;
    font-weight: 500;
    border-radius: 9999px;
    background-color: var(--brand-muted);
    color: var(--brand-foreground);
    border: 1px solid var(--brand);
  }
  
  .hero__badge-icon {
    width: 16px;
    height: 16px;
  }
  
  .hero__title {
    margin-bottom: 1.5rem;
    font-size: 2.25rem;
    font-weight: 700;
    line-height: 1.1;
    letter-spacing: -0.02em;
  }
  
  @media (min-width: 768px) {
    .hero__title {
      font-size: 3rem;
    }
  }
  
  @media (min-width: 1024px) {
    .hero__title {
      font-size: 3.75rem;
    }
  }
  
  .hero__title-highlight {
    position: relative;
    display: inline-block;
  }
  
  .hero__title-highlight-text {
    position: relative;
    z-index: 1;
  }
  
  .hero__title-highlight-bg {
    position: absolute;
    bottom: 0.5rem;
    left: 0;
    z-index: 0;
    width: 100%;
    height: 0.75rem;
    background-color: rgba(255, 204, 0, 0.3);
  }
  
  .hero__description {
    max-width: 36rem;
    margin: 0 auto 2rem;
    font-size: 1.125rem;
    color: var(--muted-foreground);
  }
  
  @media (min-width: 1024px) {
    .hero__description {
      margin: 0 0 2rem;
      font-size: 1.25rem;
    }
  }
  
  .hero__features {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 1rem;
    margin-bottom: 2rem;
  }
  
  @media (min-width: 1024px) {
    .hero__features {
      justify-content: flex-start;
    }
  }
  
  .hero__feature {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    color: var(--muted-foreground);
  }
  
  .hero__feature-icon {
    width: 16px;
    height: 16px;
    color: var(--brand);
  }
  
  .hero__buttons {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  
  @media (min-width: 640px) {
    .hero__buttons {
      flex-direction: row;
      justify-content: center;
    }
  }
  
  @media (min-width: 1024px) {
    .hero__buttons {
      justify-content: flex-start;
    }
  }
  
  .hero__btn-arrow {
    width: 20px;
    height: 20px;
    transition: transform 0.2s ease;
  }
  
  .hero__btn:hover .hero__btn-arrow {
    transform: translateX(4px);
  }
  
  /* Image section */
  .hero__image-wrapper {
    position: relative;
    max-width: 28rem;
    margin: 0 auto;
  }
  
  @media (min-width: 1024px) {
    .hero__image-wrapper {
      max-width: none;
    }
  }
  
  .hero__image-glow-1 {
    position: absolute;
    top: -1rem;
    right: -1rem;
    width: 6rem;
    height: 6rem;
    background-color: rgba(255, 204, 0, 0.2);
    border-radius: 9999px;
    filter: blur(2rem);
  }
  
  .hero__image-glow-2 {
    position: absolute;
    bottom: -1rem;
    left: -1rem;
    width: 8rem;
    height: 8rem;
    background-color: rgba(255, 204, 0, 0.1);
    border-radius: 9999px;
    filter: blur(3rem);
  }
  
  .hero__image-container {
    position: relative;
    padding: 1.5rem;
    background-color: rgba(245, 245, 244, 0.5);
    border-radius: var(--radius-xl);
  }
  
  @media (min-width: 1024px) {
    .hero__image-container {
      padding: 2rem;
    }
  }
  
  .hero__image {
    width: 100%;
    animation: float 3s ease-in-out infinite;
  }
  
  .hero__price-tag {
    position: absolute;
    bottom: -1rem;
    right: -1rem;
    padding: 1rem;
    background-color: var(--card);
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-lg);
  }
  
  @media (min-width: 1024px) {
    .hero__price-tag {
      bottom: -1.5rem;
      right: -1.5rem;
    }
  }
  
  .hero__price-label {
    font-size: 0.75rem;
    color: var(--muted-foreground);
  }
  
  .hero__price-value {
    font-family: 'Sora', sans-serif;
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--foreground);
  }
</style>

<section class="hero">
  <div class="hero__bg-gradient"></div>
  
  <div class="container hero__container">
    <!-- Text content -->
    <div class="hero__content animate-on-scroll" style="opacity: 0; animation: fadeInUp 0.6s ease-out forwards;">
      {% if section.settings.badge_text != blank %}
        <div class="hero__badge">
          <svg class="hero__badge-icon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
          </svg>
          <span>{{ section.settings.badge_text }}</span>
        </div>
      {% endif %}
      
      <h1 class="hero__title font-sora">
        {{ section.settings.title_line1 | default: 'Van chaos naar controle' }}
        <span class="hero__title-highlight">
          <span class="hero__title-highlight-text">{{ section.settings.title_line2 | default: 'in één weekend' }}</span>
          <span class="hero__title-highlight-bg"></span>
        </span>
      </h1>
      
      <p class="hero__description">
        {{ section.settings.description | default: 'Praktische bouwplannen voor je schuur of garage. Speciaal ontworpen voor Nederlandse bouwmarkten en IKEA opbergboxen.' }}
      </p>
      
      <div class="hero__features">
        {% for block in section.blocks %}
          {% if block.type == 'feature' %}
            <div class="hero__feature">
              {% case block.settings.icon %}
                {% when 'clock' %}
                  <svg class="hero__feature-icon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                {% when 'download' %}
                  <svg class="hero__feature-icon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
                  </svg>
                {% when 'check' %}
                  <svg class="hero__feature-icon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
              {% endcase %}
              <span>{{ block.settings.text }}</span>
            </div>
          {% endif %}
        {% endfor %}
      </div>
      
      <div class="hero__buttons">
        <a href="{{ section.settings.primary_button_link | default: '#producten' }}" class="btn btn-brand btn-xl hero__btn">
          {{ section.settings.primary_button_text | default: 'Bekijk bouwplannen' }}
          <svg class="hero__btn-arrow" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M13 7l5 5m0 0l-5 5m5-5H6" />
          </svg>
        </a>
        <a href="{{ section.settings.secondary_button_link | default: '#hoe-werkt-het' }}" class="btn btn-brand-outline btn-xl">
          {{ section.settings.secondary_button_text | default: 'Hoe werkt het?' }}
        </a>
      </div>
    </div>
    
    <!-- Image -->
    <div class="hero__image-wrapper" style="opacity: 0; animation: fadeInUp 0.6s ease-out 0.3s forwards;">
      <div class="hero__image-glow-1"></div>
      <div class="hero__image-glow-2"></div>
      
      <div class="hero__image-container">
        {% if section.settings.image != blank %}
          {{ section.settings.image | image_url: width: 800 | image_tag: class: 'hero__image', alt: section.settings.image_alt | default: 'Krattenkast bouwplan' }}
        {% else %}
          <img class="hero__image" src="{{ 'product-placeholder.svg' | asset_url }}" alt="Product afbeelding">
        {% endif %}
      </div>
      
      <div class="hero__price-tag">
        <p class="hero__price-label">{{ section.settings.price_label | default: 'Vanaf' }}</p>
        <p class="hero__price-value">{{ section.settings.price_text | default: '€19' }}</p>
      </div>
    </div>
  </div>
</section>

