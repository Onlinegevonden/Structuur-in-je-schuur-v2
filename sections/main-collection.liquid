<style>
  .collection {
    padding: 3rem 0 5rem;
  }
  
  @media (min-width: 1024px) {
    .collection {
      padding: 5rem 0 7rem;
    }
  }
  
  .collection__header {
    text-align: center;
    margin-bottom: 3rem;
  }
  
  .collection__title {
    margin-bottom: 1rem;
    font-size: 2rem;
    font-weight: 700;
  }
  
  @media (min-width: 768px) {
    .collection__title {
      font-size: 2.5rem;
    }
  }
  
  .collection__description {
    max-width: 42rem;
    margin: 0 auto;
    color: var(--muted-foreground);
    line-height: 1.7;
  }
  
  .collection__grid {
    display: grid;
    gap: 2rem;
  }
  
  @media (min-width: 640px) {
    .collection__grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  
  @media (min-width: 1024px) {
    .collection__grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }
  
  .collection__empty {
    grid-column: 1 / -1;
    text-align: center;
    padding: 4rem 2rem;
    color: var(--muted-foreground);
  }
</style>

<section class="collection">
  <div class="container">
    <div class="collection__header">
      <h1 class="collection__title font-sora">{{ collection.title }}</h1>
      {% if collection.description != blank %}
        <div class="collection__description">{{ collection.description }}</div>
      {% endif %}
    </div>
    
    {% if collection.products.size > 0 %}
      <div class="collection__grid">
        {% for product in collection.products %}
          <div class="product-card">
            <a href="{{ product.url }}">
              <div class="product-card__image-wrapper">
                {% if product.featured_image %}
                  {{ product.featured_image | image_url: width: 600 | image_tag: class: 'product-card__image', alt: product.title }}
                {% else %}
                  <img class="product-card__image" src="{{ 'product-placeholder.svg' | asset_url }}" alt="{{ product.title }}">
                {% endif %}
                <span class="product-card__price-badge">{{ product.price | money }}</span>
              </div>
            </a>
            
            <div class="product-card__content">
              <h3 class="product-card__title">
                <a href="{{ product.url }}">{{ product.title }}</a>
              </h3>
              <p class="product-card__description">{{ product.description | strip_html | truncate: 100 }}</p>
              
              <a href="{{ product.url }}" class="product-card__btn">
                <svg class="product-card__btn-icon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                </svg>
                Bekijk bouwplan
              </a>
            </div>
          </div>
        {% endfor %}
      </div>
    {% else %}
      <div class="collection__empty">
        <p>Er zijn nog geen producten in deze collectie.</p>
      </div>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Collectie pagina",
  "settings": []
}
{% endschema %}
