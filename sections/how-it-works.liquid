<style>
  .how-it-works {
    background-color: var(--background);
    padding: 5rem 0;
  }
  
  @media (min-width: 1024px) {
    .how-it-works {
      padding: 7rem 0;
    }
  }
  
  .how-it-works__header {
    text-align: center;
    margin-bottom: 4rem;
  }
  
  .how-it-works__badge {
    display: inline-block;
    margin-bottom: 1rem;
    padding: 0.375rem 1rem;
    font-size: 0.875rem;
    font-weight: 500;
    border-radius: 9999px;
    background-color: var(--brand-muted);
    color: var(--brand-foreground);
  }
  
  .how-it-works__title {
    margin-bottom: 1rem;
    font-size: 1.875rem;
    font-weight: 700;
  }
  
  @media (min-width: 768px) {
    .how-it-works__title {
      font-size: 2.25rem;
    }
  }
  
  .how-it-works__subtitle {
    max-width: 42rem;
    margin: 0 auto;
    font-size: 1.125rem;
    color: var(--muted-foreground);
  }
  
  .how-it-works__steps {
    position: relative;
  }
  
  /* Connecting line */
  .how-it-works__line {
    display: none;
    position: absolute;
    left: 50%;
    top: 2rem;
    width: 1px;
    height: calc(100% - 4rem);
    transform: translateX(-50%);
    background: linear-gradient(to bottom, var(--brand), rgba(255, 204, 0, 0.5), transparent);
  }
  
  @media (min-width: 1024px) {
    .how-it-works__line {
      display: block;
    }
  }
  
  .how-it-works__grid {
    display: grid;
    gap: 2rem;
  }
  
  @media (min-width: 768px) {
    .how-it-works__grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  
  @media (min-width: 1024px) {
    .how-it-works__grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }
  
  .step {
    position: relative;
    text-align: center;
  }
  
  .step__icon-wrapper {
    position: relative;
    z-index: 10;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 4rem;
    height: 4rem;
    margin: 0 auto 1.5rem;
    background-color: var(--brand);
    border-radius: var(--radius-xl);
    box-shadow: var(--shadow-brand);
  }
  
  .step__icon {
    width: 1.75rem;
    height: 1.75rem;
    color: var(--brand-foreground);
  }
  
  .step__title {
    margin-bottom: 0.5rem;
    font-family: 'Sora', sans-serif;
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--foreground);
  }
  
  .step__description {
    color: var(--muted-foreground);
    line-height: 1.6;
  }
</style>

<section class="how-it-works" id="hoe-werkt-het">
  <div class="container">
    <!-- Header -->
    <div class="how-it-works__header animate-on-scroll" style="opacity: 0; animation: fadeInUp 0.5s ease-out forwards;">
      {% if section.settings.badge_text != blank %}
        <span class="how-it-works__badge">{{ section.settings.badge_text }}</span>
      {% endif %}
      <h2 class="how-it-works__title font-sora">{{ section.settings.title | default: 'Hoe werkt het?' }}</h2>
      <p class="how-it-works__subtitle">{{ section.settings.subtitle | default: 'Van aankoop tot opgeruimde schuur in vier eenvoudige stappen.' }}</p>
    </div>
    
    <!-- Steps -->
    <div class="how-it-works__steps">
      <div class="how-it-works__line"></div>
      
      <div class="how-it-works__grid">
        {% for block in section.blocks %}
          <div class="step animate-on-scroll" style="opacity: 0; animation: fadeInUp 0.5s ease-out {{ forloop.index | times: 0.1 }}s forwards;" {{ block.shopify_attributes }}>
            <div class="step__icon-wrapper">
              {% case block.settings.icon %}
                {% when 'shopping-bag' %}
                  <svg class="step__icon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
                  </svg>
                {% when 'download' %}
                  <svg class="step__icon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
                  </svg>
                {% when 'hammer' %}
                  <svg class="step__icon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                {% when 'party' %}
                  <svg class="step__icon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
                  </svg>
              {% endcase %}
            </div>
            <h3 class="step__title">{{ block.settings.title }}</h3>
            <p class="step__description">{{ block.settings.description }}</p>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Hoe werkt het",
  "settings": [
    {
      "type": "text",
      "id": "badge_text",
      "label": "Badge tekst",
      "default": "Zo simpel is het"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Titel",
      "default": "Hoe werkt het?"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Ondertitel",
      "default": "Van aankoop tot opgeruimde schuur in vier eenvoudige stappen."
    }
  ],
  "blocks": [
    {
      "type": "step",
      "name": "Stap",
      "settings": [
        {
          "type": "select",
          "id": "icon",
          "label": "Icoon",
          "options": [
            { "value": "shopping-bag", "label": "Winkeltas" },
            { "value": "download", "label": "Download" },
            { "value": "hammer", "label": "Bouwen" },
            { "value": "party", "label": "Feest" }
          ],
          "default": "shopping-bag"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Titel",
          "default": "Stap titel"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Beschrijving",
          "default": "Beschrijving van deze stap."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hoe werkt het",
      "blocks": [
        {
          "type": "step",
          "settings": {
            "icon": "shopping-bag",
            "title": "1. Kies je bouwplan",
            "description": "Selecteer het bouwplan dat past bij jouw situatie en wensen."
          }
        },
        {
          "type": "step",
          "settings": {
            "icon": "download",
            "title": "2. Direct downloaden",
            "description": "Na betaling ontvang je direct je PDF met alle instructies."
          }
        },
        {
          "type": "step",
          "settings": {
            "icon": "hammer",
            "title": "3. Bouw het zelf",
            "description": "Volg de stap-voor-stap instructies met onze duidelijke handleiding."
          }
        },
        {
          "type": "step",
          "settings": {
            "icon": "party",
            "title": "4. Geniet van je resultaat",
            "description": "Een opgeruimde schuur binnen één weekend - gegarandeerd!"
          }
        }
      ]
    }
  ]
}
{% endschema %}
