<style>
  .footer {
    border-top: 1px solid var(--border);
    background-color: var(--background);
    padding: 4rem 0;
  }
  
  .footer__grid {
    display: grid;
    gap: 3rem;
  }
  
  @media (min-width: 1024px) {
    .footer__grid {
      grid-template-columns: 2fr 1fr 1fr;
    }
  }
  
  .footer__brand {
    max-width: 24rem;
  }
  
  .footer__logo {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 1rem;
  }
  
  .footer__logo-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border-radius: 0.75rem;
    background-color: var(--brand);
  }
  
  .footer__logo-icon span {
    font-family: 'Sora', sans-serif;
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--brand-foreground);
  }
  
  .footer__logo-text {
    font-family: 'Sora', sans-serif;
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--foreground);
  }
  
  .footer__description {
    margin-bottom: 1.5rem;
    color: var(--muted-foreground);
    line-height: 1.7;
  }
  
  .footer__social {
    display: flex;
    gap: 1rem;
  }
  
  .footer__social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    color: var(--muted-foreground);
    background-color: var(--secondary);
    border-radius: var(--radius);
    transition: all 0.2s ease;
  }
  
  .footer__social-link:hover {
    color: var(--brand-foreground);
    background-color: var(--brand);
  }
  
  .footer__social-icon {
    width: 20px;
    height: 20px;
  }
  
  .footer__nav-title {
    margin-bottom: 1rem;
    font-family: 'Sora', sans-serif;
    font-weight: 600;
    color: var(--foreground);
  }
  
  .footer__nav-list {
    list-style: none;
  }
  
  .footer__nav-item {
    margin-bottom: 0.75rem;
  }
  
  .footer__nav-link {
    color: var(--muted-foreground);
    transition: color 0.2s ease;
  }
  
  .footer__nav-link:hover {
    color: var(--foreground);
  }
  
  .footer__bottom {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid var(--border);
  }
  
  @media (min-width: 768px) {
    .footer__bottom {
      flex-direction: row;
      justify-content: space-between;
    }
  }
  
  .footer__copyright {
    font-size: 0.875rem;
    color: var(--muted-foreground);
  }
  
  .footer__legal {
    display: flex;
    gap: 1.5rem;
  }
  
  .footer__legal-link {
    font-size: 0.875rem;
    color: var(--muted-foreground);
    transition: color 0.2s ease;
  }
  
  .footer__legal-link:hover {
    color: var(--foreground);
  }
</style>

<footer class="footer" id="over">
  <div class="container">
    <div class="footer__grid">
      <!-- Brand -->
      <div class="footer__brand">
        <a href="/" class="footer__logo">
          <div class="footer__logo-icon">
            <span>{{ section.settings.logo_letter | default: 'S' }}</span>
          </div>
          <span class="footer__logo-text">{{ section.settings.logo_text | default: shop.name }}</span>
        </a>
        <p class="footer__description">{{ section.settings.description | default: 'Van chaos naar controle in één weekend. Praktische bouwplannen voor Nederlandse doe-het-zelvers die hun schuur of garage willen organiseren.' }}</p>
        <div class="footer__social">
          {% if section.settings.email != blank %}
            <a href="mailto:{{ section.settings.email }}" class="footer__social-link" aria-label="E-mail">
              <svg class="footer__social-icon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
            </a>
          {% endif %}
          {% if section.settings.instagram != blank %}
            <a href="{{ section.settings.instagram }}" class="footer__social-link" aria-label="Instagram" target="_blank" rel="noopener">
              <svg class="footer__social-icon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <rect x="2" y="2" width="20" height="20" rx="5" ry="5"/>
                <path d="M16 11.37A4 4 0 1112.63 8 4 4 0 0116 11.37z"/>
                <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"/>
              </svg>
            </a>
          {% endif %}
        </div>
      </div>
      
      <!-- Navigation columns -->
      {% for block in section.blocks %}
        {% if block.type == 'menu' %}
          <div {{ block.shopify_attributes }}>
            <h3 class="footer__nav-title">{{ block.settings.title }}</h3>
            <ul class="footer__nav-list">
              {% for link in block.settings.menu.links %}
                <li class="footer__nav-item">
                  <a href="{{ link.url }}" class="footer__nav-link">{{ link.title }}</a>
                </li>
              {% endfor %}
            </ul>
          </div>
        {% endif %}
      {% endfor %}
    </div>
    
    <div class="footer__bottom">
      <p class="footer__copyright">© {{ 'now' | date: '%Y' }} {{ shop.name }}. Alle rechten voorbehouden.</p>
      <div class="footer__legal">
        {% if section.settings.privacy_link != blank %}
          <a href="{{ section.settings.privacy_link }}" class="footer__legal-link">Privacybeleid</a>
        {% endif %}
        {% if section.settings.terms_link != blank %}
          <a href="{{ section.settings.terms_link }}" class="footer__legal-link">Algemene voorwaarden</a>
        {% endif %}
      </div>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "text",
      "id": "logo_letter",
      "label": "Logo letter",
      "default": "S"
    },
    {
      "type": "text",
      "id": "logo_text",
      "label": "Logo tekst",
      "default": "Structuur in je Schuur"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Beschrijving",
      "default": "Van chaos naar controle in één weekend. Praktische bouwplannen voor Nederlandse doe-het-zelvers die hun schuur of garage willen organiseren."
    },
    {
      "type": "text",
      "id": "email",
      "label": "E-mailadres",
      "default": "info@structuurinjeschuur.nl"
    },
    {
      "type": "url",
      "id": "instagram",
      "label": "Instagram link"
    },
    {
      "type": "url",
      "id": "privacy_link",
      "label": "Privacybeleid link"
    },
    {
      "type": "url",
      "id": "terms_link",
      "label": "Algemene voorwaarden link"
    }
  ],
  "blocks": [
    {
      "type": "menu",
      "name": "Menu kolom",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Titel",
          "default": "Links"
        },
        {
          "type": "link_list",
          "id": "menu",
          "label": "Menu"
        }
      ]
    }
  ],
  "default": {
    "blocks": [
      {
        "type": "menu",
        "settings": {
          "title": "Bouwplannen"
        }
      },
      {
        "type": "menu",
        "settings": {
          "title": "Ondersteuning"
        }
      }
    ]
  }
}
{% endschema %}
