<style>
  .cart {
    padding: 3rem 0 5rem;
  }
  
  @media (min-width: 1024px) {
    .cart {
      padding: 5rem 0 7rem;
    }
  }
  
  .cart__container {
    max-width: 48rem;
    margin: 0 auto;
  }
  
  .cart__title {
    margin-bottom: 2rem;
    font-size: 2rem;
    font-weight: 700;
    text-align: center;
  }
  
  .cart__empty {
    text-align: center;
    padding: 4rem 2rem;
  }
  
  .cart__empty-icon {
    width: 4rem;
    height: 4rem;
    margin: 0 auto 1.5rem;
    color: var(--muted-foreground);
    opacity: 0.5;
  }
  
  .cart__empty-text {
    margin-bottom: 1.5rem;
    color: var(--muted-foreground);
  }
  
  .cart__items {
    margin-bottom: 2rem;
  }
  
  .cart__item {
    display: flex;
    gap: 1.5rem;
    padding: 1.5rem 0;
    border-bottom: 1px solid var(--border);
  }
  
  .cart__item:first-child {
    border-top: 1px solid var(--border);
  }
  
  .cart__item-image {
    width: 100px;
    height: 100px;
    flex-shrink: 0;
    background-color: var(--secondary);
    border-radius: var(--radius);
    overflow: hidden;
  }
  
  .cart__item-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .cart__item-info {
    flex: 1;
  }
  
  .cart__item-title {
    margin-bottom: 0.25rem;
    font-family: 'Sora', sans-serif;
    font-weight: 600;
    color: var(--foreground);
  }
  
  .cart__item-price {
    color: var(--muted-foreground);
  }
  
  .cart__item-remove {
    padding: 0.5rem;
    color: var(--muted-foreground);
    background: none;
    border: none;
    cursor: pointer;
    transition: color 0.2s ease;
  }
  
  .cart__item-remove:hover {
    color: #DC2626;
  }
  
  .cart__item-remove-icon {
    width: 1.25rem;
    height: 1.25rem;
  }
  
  .cart__footer {
    padding: 1.5rem;
    background-color: var(--secondary);
    border-radius: var(--radius-lg);
  }
  
  .cart__total {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.5rem;
  }
  
  .cart__total-label {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--foreground);
  }
  
  .cart__total-price {
    font-family: 'Sora', sans-serif;
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--foreground);
  }
  
  .cart__checkout-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    width: 100%;
    padding: 1rem 2rem;
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--brand-foreground);
    background-color: var(--brand);
    border: none;
    border-radius: var(--radius);
    cursor: pointer;
    transition: all 0.2s ease;
  }
  
  .cart__checkout-btn:hover {
    background-color: var(--brand-hover);
    transform: translateY(-1px);
  }
  
  .cart__checkout-icon {
    width: 1.25rem;
    height: 1.25rem;
  }
  
  .cart__note {
    margin-top: 1rem;
    font-size: 0.875rem;
    text-align: center;
    color: var(--muted-foreground);
  }
</style>

<section class="cart">
  <div class="container">
    <div class="cart__container">
      <h1 class="cart__title font-sora">Winkelwagen</h1>
      
      {% if cart.item_count > 0 %}
        <form action="/cart" method="post">
          <div class="cart__items">
            {% for item in cart.items %}
              <div class="cart__item">
                <div class="cart__item-image">
                  {% if item.image %}
                    {{ item.image | image_url: width: 200 | image_tag: alt: item.title }}
                  {% endif %}
                </div>
                <div class="cart__item-info">
                  <h3 class="cart__item-title">{{ item.product.title }}</h3>
                  <p class="cart__item-price">{{ item.price | money }}</p>
                </div>
                <a href="/cart/change?id={{ item.key }}&quantity=0" class="cart__item-remove" aria-label="Verwijder {{ item.title }}">
                  <svg class="cart__item-remove-icon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                  </svg>
                </a>
              </div>
            {% endfor %}
          </div>
          
          <div class="cart__footer">
            <div class="cart__total">
              <span class="cart__total-label">Totaal</span>
              <span class="cart__total-price">{{ cart.total_price | money }}</span>
            </div>
            
            <button type="submit" name="checkout" class="cart__checkout-btn">
              <svg class="cart__checkout-icon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
              </svg>
              Afrekenen
            </button>
            
            <p class="cart__note">Na aankoop ontvang je direct je download</p>
          </div>
        </form>
      {% else %}
        <div class="cart__empty">
          <svg class="cart__empty-icon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" />
          </svg>
          <p class="cart__empty-text">Je winkelwagen is leeg</p>
          <a href="/" class="btn btn-brand">Bekijk bouwplannen</a>
        </div>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Winkelwagen",
  "settings": []
}
{% endschema %}
